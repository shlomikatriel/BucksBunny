<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@integer/dialog_animation_duration">
    <scale
        android:fromXScale="@fraction/dialog_animation_scale"
        android:fromYScale="@fraction/dialog_animation_scale"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1" />
</set>
