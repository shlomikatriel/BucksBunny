<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@integer/dialog_animation_duration">
    <scale
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="@fraction/dialog_animation_scale"
        android:toYScale="@fraction/dialog_animation_scale" />
    <alpha
        android:fromAlpha="1"
        android:toAlpha="0" />
</set>