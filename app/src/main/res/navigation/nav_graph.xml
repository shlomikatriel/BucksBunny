<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/expenses_main_fragment">

    <fragment
        android:id="@+id/expenses_main_fragment"
        android:name="com.shlomikatriel.expensesmanager.expenses.fragments.ExpensesFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/open_preferences_fragment"
            app:destination="@id/preferences_fragment"
            app:enterAnim="@anim/fragment_enter"
            app:exitAnim="@anim/fragment_exit"
            app:popEnterAnim="@anim/fragment_pop_enter"
            app:popExitAnim="@anim/fragment_pop_exit" />

        <action
            android:id="@+id/open_onboarding_fragment"
            app:destination="@id/onboarding_fragment"
            app:enterAnim="@null"
            app:exitAnim="@null"
            app:popEnterAnim="@null"
            app:popExitAnim="@null" />
    </fragment>

    <fragment
        android:id="@+id/preferences_fragment"
        android:name="com.shlomikatriel.expensesmanager.preferences.fragments.PreferencesFragment"
        android:label="@string/preferences_title">

        <action
            android:id="@+id/open_open_source_licenses_activity"
            app:destination="@id/open_source_licenses_activity"
            app:enterAnim="@anim/fragment_enter"
            app:exitAnim="@anim/fragment_exit"
            app:popEnterAnim="@anim/fragment_pop_enter"
            app:popExitAnim="@anim/fragment_pop_exit" />
    </fragment>

    <fragment
        android:id="@+id/onboarding_fragment"
        android:name="com.shlomikatriel.expensesmanager.onboarding.OnboardingFragment"
        android:label="onboarding_fragment" />

    <activity
        android:id="@+id/open_source_licenses_activity"
        android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
        android:label="open_source_licenses_activity"
        tools:layout="@layout/license_menu_activity_no_licenses" />
</navigation>